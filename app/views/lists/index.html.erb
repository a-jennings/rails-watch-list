<div class="banner" style="background-image: asset-url("card_default.jpg");">
  <div class="container">
    <h1>Drewatch</h1>
    <p>Watch movies. Make memories</p>
    <%= link_to 'Start a new list', new_list_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="container mt-3">
  <ul class="list-grid">
    <% @lists.each do |list| %>
      <li>
        <%= link_to list_path(list.id) do  %>
        <div class="card-category">
          <%=list.name %>
        </div>
        <% end %>

      </li>
    <% end %>
  </ul>
</div>
