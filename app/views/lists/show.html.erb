<h1><%= @list.name %></h1>
<%= link_to 'Add movie', new_list_bookmark_path(@list.id) %>



<%= link_to 'Edit', edit_list_path  %>
<%= link_to 'Back', lists_path  %>
<%= link_to 'Delete', list_path(@list.id), method: :delete,
                                            data: {confirm: "Are you sure?"} %>


<ul>
  <% @bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.comment %>
      <%= bookmark.movie_id %>
      <%= link_to 'Delete', bookmark_path(bookmark.id), method: :delete %>
    </li>
  <% end %>
</ul>
