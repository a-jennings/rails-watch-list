<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), asset-url("card_default.jpg");">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>
<div class="container text-center mt-3">
    <%= link_to 'Add movie', new_list_bookmark_path(@list.id), class: "btn btn-outline-primary" %>
    <%= link_to 'Edit list', edit_list_path, class: "btn btn-outline-warning" %>
    <%= link_to 'Delete list', list_path(@list.id), method: :delete,
                                                data: {confirm: "Are you sure?"},
                                                class: "btn btn-outline-danger" %>
    <%= link_to 'Back', lists_path, class: "btn btn-outline-dark" %>
</div>
<div class="container mt-3">
  <ul class="list-grid">
    <% @bookmarks.each do |bookmark| %>
      <li>
        <div class="card-trip">
          <img src="<%= bookmark.movie.poster_url %>" />
          <div class="card-trip-infos">
            <div>
              <h2><%= bookmark.movie.title %></h2>
              <p><%= bookmark.movie.overview %></p>
              <h2 class="card-trip-pricing mt-2"><%= bookmark.movie.rating %><i class="far fa-star"></i></h2>
            </div>
          </div>
            <div class="card-footer d-flex justify-content-between align-items-center">
              <%= bookmark.comment %>
              <%= link_to 'Delete', bookmark_path(bookmark.id), method: :delete, class: "btn btn-outline-danger" %>
            </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
